@page "/teacher/my-profile"
@using abp_obs_project.Teachers
@inherits abp_obs_projectComponentBase
@attribute [Authorize]

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-3">
                <i class="fas fa-user me-2"></i>@L["Menu:TeacherProfile"]
            </h1>
        </div>
    </div>

    @if (!IsTeacher)
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @L["Dashboard:NoAccessMessage"]
        </div>
    }
    else if (Me == null)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            @L["Teacher:ProfileNotFound"]
        </div>
    }
    else
    {
        @if (!string.IsNullOrEmpty(SaveSuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@SaveSuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!string.IsNullOrEmpty(SaveErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@SaveErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row g-4">
            <div class="col-12 col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">@L["Profile"]</h5>
                    </div>
                    <div class="card-body">
                        <EditForm Model="EditModel" OnValidSubmit="SaveAsync">
                            <DataAnnotationsValidator />
                            <div class="row mb-3">
                                <div class="col-12 col-md-6">
                                    <label class="form-label">@L["FirstName"]</label>
                                    <InputText class="form-control" @bind-Value="EditModel.FirstName" />
                                </div>
                                <div class="col-12 col-md-6">
                                    <label class="form-label">@L["LastName"]</label>
                                    <InputText class="form-control" @bind-Value="EditModel.LastName" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-12 col-md-6">
                                    <label class="form-label">@L["Email"]</label>
                                    <input class="form-control" value="@Me.Email" disabled />
                                </div>
                                <div class="col-12 col-md-6">
                                    <label class="form-label">@L["Department"]</label>
                                    <InputText class="form-control" @bind-Value="EditModel.Department" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-12 col-md-6">
                                    <label class="form-label">@L["Phone"]</label>
                                    <InputText class="form-control" @bind-Value="EditModel.PhoneNumber" />
                                </div>
                            </div>
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i>@L["Save"]
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">@L["Settings:Account"]</h5>
                    </div>
                    <div class="card-body">
                        <a class="btn btn-outline-primary" href="/account/manage?returnUrl=/teacher/my-profile">@L["ManageAccount"]</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

